<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment"
    android:layout_marginBottom="40dp"
    android:background="@drawable/color_home_bg"
    >
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swiperRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <com.amar.library.ui.StickyScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/stickyLayout"
                android:translationZ="1dp"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/drawerLayout"
                app:stickyHeader="@id/homeControlWrapper">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/homeControlWrapper"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    app:layout_constraintTop_toTopOf="parent"

                    android:background="@drawable/shadow_bg_layout"
                    app:layout_constraintStart_toStartOf="parent"
                    android:visibility="visible"
                    android:translationZ="1dp">
                    <ImageView
                        android:id="@+id/artworkImg"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:minHeight="60dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginVertical="8dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/default_artwork"
                        android:paddingEnd="10dp"
                        tools:ignore="RtlSymmetry"/>
                    <LinearLayout
                        android:id="@+id/titleSongWrapper"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:layout_marginStart="6dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"

                        app:layout_constraintStart_toEndOf="@+id/artworkImg">

                        <TextView
                            android:id="@+id/homeSongName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text="Song Title"
                            android:textSize="13sp"
                            app:layout_constraintWidth_percent="0.6"
                            android:ellipsize="marquee"
                            android:singleLine="true"

                            android:marqueeRepeatLimit="marquee_forever"
                            app:layout_constraintHorizontal_bias="0"
                            android:fontFamily="@font/poppins_bold"/>
                        <TextView
                            android:id="@+id/homeSongAuthor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/artworkImg"
                            android:text="Song Author"
                            android:textSize="10sp"
                            app:layout_constraintWidth_percent="0.6"
                            app:layout_constraintHorizontal_bias="0"
                            android:fontFamily="@font/poppins_regular"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/homeSkipPrevBtn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toStartOf="@+id/homePlayPauseBtn"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintWidth_percent="0.1"
                        android:foreground="@drawable/click_effect"
                        app:drawableStartCompat="@drawable/ic_baseline_skip_previous_32"
                        />
                    <TextView
                        android:id="@+id/homePlayPauseBtn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"

                        app:layout_constraintEnd_toStartOf="@+id/homeSkipNextBtn"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintWidth_percent="0.1"
                        android:foreground="@drawable/click_effect"
                        app:drawableStartCompat="@drawable/ic_baseline_play_circle_outline_24"
                        />
                    <TextView
                        android:id="@+id/homeSkipNextBtn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"

                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/closeMiniPlayer"
                        android:foreground="@drawable/click_effect"
                        app:layout_constraintWidth_percent="0.1"
                        android:layout_marginEnd="5dp"
                        app:drawableStartCompat="@drawable/ic_baseline_skip_next_28"
                        />
                    <LinearLayout
                        android:id="@+id/closeMiniPlayer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_corner"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintWidth_percent="0.1"
                        android:layout_marginEnd="6dp">
                        <TextView
                            android:id="@+id/homeCloseBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:foreground="@drawable/click_effect"
                            app:drawableStartCompat="@drawable/ic_baseline_close_24"
                            />
                    </LinearLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.amar.library.ui.StickyScrollView>

            <androidx.core.widget.NestedScrollView
                android:id="@+id/drawerLayout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:fillViewport="true"
                android:fitsSystemWindows="true"
                app:layout_constraintTop_toBottomOf="@+id/stickyLayout">


                <androidx.constraintlayout.widget.ConstraintLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/rlHomeImage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toTopOf="parent">

                        <LinearLayout
                            android:id="@+id/llTitleGarden"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <LinearLayout
                                android:id="@+id/layout_new"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal"
                                android:translationZ="10dp"
                                app:layout_constraintTop_toTopOf="parent">

                                <androidx.appcompat.widget.SearchView
                                    android:id="@+id/searchView"
                                    android:layout_width="230dp"
                                    android:layout_height="35dp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="10dp"
                                    android:autofillHints="Vaste"
                                    android:background="@drawable/search_view_bg"
                                    android:backgroundTint="#efedec"
                                    android:elevation="50dp"
                                    android:iconifiedByDefault="false"
                                    android:maxWidth="240dp"
                                    android:minWidth="200dp"
                                    android:queryBackground="@android:color/transparent"
                                    app:defaultQueryHint="Vastu"

                                    app:queryHint="Valtu" />


                            </LinearLayout>


                        </LinearLayout>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnNotify"
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="5dp"
                            app:elevation="30dp"
                            app:icon="@drawable/ic_baseline_notifications_none_24"

                            app:iconTint="#ffffff"
                            app:layout_constraintEnd_toEndOf="parent"

                            app:layout_constraintEnd_toStartOf="@+id/profileImage"
                            app:layout_constraintTop_toTopOf="parent"

                            />

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/profileImage"
                            android:layout_width="52dp"
                            android:layout_height="52dp"
                            android:layout_alignParentRight="true"
                            android:layout_gravity="center_vertical"

                            android:layout_marginEnd="10dp"
                            android:src="@drawable/avt_icon"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"

                            />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <LinearLayout
                        android:id="@+id/tvDicover"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="10dp"
                        android:orientation="horizontal"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/rlHomeImage">

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="100dp"
                            android:fontFamily="@font/montserrat_bold"
                            android:text="Good Morning"
                            android:textColor="@color/white"
                            android:textSize="22sp"
                            android:textStyle="bold"


                            />


                    </LinearLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/clTemp1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="15dp"

                        app:layout_constraintTop_toBottomOf="@+id/tvDicover">

                        <LinearLayout
                            android:id="@+id/layout_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:orientation="horizontal"
                            app:layout_constraintTop_toTopOf="parent">

                            <RelativeLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="10dp"
                                android:layout_weight="1"
                                android:background="@drawable/button_corner"
                                android:backgroundTint="#f0f5f5">

                                <LinearLayout

                                    android:layout_width="wrap_content"
                                    android:layout_height="70dp"
                                    android:minWidth="70dp"
                                    android:minHeight="70dp"
                                    android:orientation="horizontal"

                                    >

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"

                                        android:layout_weight="5">

                                        <com.google.android.material.imageview.ShapeableImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:scaleType="centerCrop"
                                            android:src="@drawable/album_adventure"
                                            app:shapeAppearanceOverlay="@style/ImgCorner"

                                            />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginHorizontal="5dp"
                                        android:layout_weight="3"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:gravity="center_vertical"
                                            android:layout_gravity="center"
                                            android:textColor="@color/grey_text"
                                            android:textSize="12sp"
                                            android:fontFamily="@font/montserrat_black"
                                            android:text="Discovery Weekly" />
                                    </LinearLayout>


                                </LinearLayout>

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="10dp"
                                android:layout_weight="1"
                                android:background="@drawable/button_corner"
                                android:backgroundTint="#f0f5f5">

                                <LinearLayout

                                    android:layout_width="wrap_content"
                                    android:layout_height="70dp"
                                    android:minWidth="70dp"
                                    android:minHeight="70dp"
                                    android:orientation="horizontal"

                                    >

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"

                                        android:layout_weight="5">

                                        <com.google.android.material.imageview.ShapeableImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:scaleType="centerCrop"
                                            android:src="@drawable/album_adventure_3"
                                            app:shapeAppearanceOverlay="@style/ImgCorner"

                                            />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginHorizontal="5dp"
                                        android:layout_weight="3"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:gravity="center_vertical"
                                            android:layout_gravity="center"
                                            android:textColor="@color/grey_text"
                                            android:textSize="12sp"
                                            android:fontFamily="@font/montserrat_black"
                                            android:text="Creative Focus" />
                                    </LinearLayout>


                                </LinearLayout>

                            </RelativeLayout>

                        </LinearLayout>


                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/clTemp2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="15dp"

                        app:layout_constraintTop_toBottomOf="@+id/clTemp1">

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:orientation="horizontal"
                            app:layout_constraintTop_toTopOf="parent">

                            <RelativeLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="10dp"
                                android:layout_weight="1"
                                android:background="@drawable/button_corner"
                                android:backgroundTint="#f0f5f5">

                                <LinearLayout

                                    android:layout_width="wrap_content"
                                    android:layout_height="70dp"
                                    android:minWidth="70dp"
                                    android:minHeight="70dp"
                                    android:orientation="horizontal"

                                    >

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"

                                        android:layout_weight="5">

                                        <com.google.android.material.imageview.ShapeableImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:scaleType="centerCrop"
                                            android:src="@drawable/album_adventure_4"
                                            app:shapeAppearanceOverlay="@style/ImgCorner"

                                            />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginHorizontal="5dp"
                                        android:layout_weight="3"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:gravity="center_vertical"
                                            android:layout_gravity="center"
                                            android:textColor="@color/grey_text"
                                            android:textSize="12sp"
                                            android:fontFamily="@font/montserrat_black"
                                            android:text="Focus Flow" />
                                    </LinearLayout>


                                </LinearLayout>

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="10dp"
                                android:layout_weight="1"
                                android:background="@drawable/button_corner"
                                android:backgroundTint="#f0f5f5">

                                <LinearLayout

                                    android:layout_width="wrap_content"
                                    android:layout_height="70dp"
                                    android:minWidth="70dp"
                                    android:minHeight="70dp"
                                    android:orientation="horizontal"

                                    >

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"

                                        android:layout_weight="5">

                                        <com.google.android.material.imageview.ShapeableImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:scaleType="centerCrop"
                                            android:src="@drawable/album_adventure_6"
                                            app:shapeAppearanceOverlay="@style/ImgCorner"

                                            />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginHorizontal="5dp"
                                        android:layout_weight="3"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:gravity="center_vertical"
                                            android:layout_gravity="center"
                                            android:textColor="@color/grey_text"
                                            android:textSize="12sp"
                                            android:fontFamily="@font/montserrat_black"
                                            android:text="Chill Hits" />
                                    </LinearLayout>


                                </LinearLayout>

                            </RelativeLayout>

                        </LinearLayout>


                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/clTemp3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="15dp"

                        app:layout_constraintTop_toBottomOf="@+id/clTemp2">

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:orientation="horizontal"
                            app:layout_constraintTop_toTopOf="parent">

                            <RelativeLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="10dp"
                                android:layout_weight="1"
                                android:background="@drawable/button_corner"
                                android:backgroundTint="#f0f5f5">

                                <LinearLayout

                                    android:layout_width="wrap_content"
                                    android:layout_height="70dp"
                                    android:minWidth="70dp"
                                    android:minHeight="70dp"
                                    android:orientation="horizontal"

                                    >

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"

                                        android:layout_weight="5">

                                        <com.google.android.material.imageview.ShapeableImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:scaleType="centerCrop"
                                            android:src="@drawable/album_adventure_2"
                                            app:shapeAppearanceOverlay="@style/ImgCorner"

                                            />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginHorizontal="5dp"
                                        android:layout_weight="3"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:gravity="center_vertical"
                                            android:layout_gravity="center"
                                            android:textColor="@color/grey_text"
                                            android:textSize="12sp"
                                            android:fontFamily="@font/montserrat_black"
                                            android:text="Workday Lounge" />
                                    </LinearLayout>


                                </LinearLayout>

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="10dp"
                                android:layout_weight="1"
                                android:background="@drawable/button_corner"
                                android:backgroundTint="#f0f5f5">

                                <LinearLayout

                                    android:layout_width="wrap_content"
                                    android:layout_height="70dp"
                                    android:minWidth="70dp"
                                    android:minHeight="70dp"
                                    android:orientation="horizontal"

                                    >

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"

                                        android:layout_weight="5">

                                        <com.google.android.material.imageview.ShapeableImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:scaleType="centerCrop"
                                            android:src="@drawable/album_adventure_1"
                                            app:shapeAppearanceOverlay="@style/ImgCorner"

                                            />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginHorizontal="5dp"
                                        android:layout_weight="3"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:gravity="center_vertical"
                                            android:layout_gravity="center"
                                            android:textSize="12sp"
                                            android:textColor="@color/grey_text"
                                            android:fontFamily="@font/montserrat_black"
                                            android:text="Peaceful Songs" />
                                    </LinearLayout>


                                </LinearLayout>

                            </RelativeLayout>

                        </LinearLayout>


                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <LinearLayout
                        android:id="@+id/llMadeForYou"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="10dp"
                        android:orientation="horizontal"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/clTemp3">

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="100dp"
                            android:fontFamily="@font/poppins_medium"
                            android:text="Made For You"
                            android:textColor="@color/white"
                            android:textSize="22sp"
                            android:textStyle="bold"


                            />


                    </LinearLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/conLayScrollView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        app:layout_constraintTop_toBottomOf="@+id/llMadeForYou"

                        >


                        <HorizontalScrollView
                            android:id="@+id/hsv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_marginStart="10dp"
                            android:fillViewport="true"
                            android:measureAllChildren="false"
                            android:scrollbars="none"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"

                            >

                            <LinearLayout
                                android:id="@+id/innerLay"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"

                                >

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="10dp"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="140dp"
                                        android:layout_height="170dp"
                                        android:backgroundTint="#f2eee9"
                                        android:padding="10dp"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"

                                        app:layout_constraintTop_toTopOf="parent">

                                        <ImageView
                                            android:layout_width="100dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1"

                                            android:src="@drawable/default_artwork" />
                                    </LinearLayout>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="10dp"
                                        android:fontFamily="@font/montserrat_semibold"
                                        android:text="Laurus Nobilis"
                                        android:textColor="@color/white" />


                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="10dp"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="140dp"
                                        android:layout_height="170dp"
                                        android:backgroundTint="#f2eee9"
                                        android:padding="10dp"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"


                                        app:layout_constraintTop_toTopOf="parent">

                                        <ImageView
                                            android:layout_width="100dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1"

                                            android:src="@drawable/default_artwork" />
                                    </LinearLayout>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="10dp"
                                        android:fontFamily="@font/montserrat_semibold"
                                        android:text="Monstera"
                                        android:textColor="@color/white" />


